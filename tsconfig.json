{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@dflex/*": ["packages/*/src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    { "path": "./packages/coreInstance" },
    { "path": "./packages/dnd" },
    { "path": "./packages/dom-gen" },
    { "path": "./packages/draggable" },
    { "path": "./packages/store" }
  ]
}
